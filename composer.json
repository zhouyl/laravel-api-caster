{
  "name": "mellivora/laravel-api-caster",
  "version": "2.0.0",
  "type": "library",
  "description": "Convert API response results to Entity objects like Laravel Eloquent. Supports PHP 8.3+ and Laravel 10+.",
  "homepage": "https://github.com/zhouyl/laravel-api-caster",
  "license": "MIT",
  "authors": [
    {
      "name": "zhouyl",
      "email": "81438567@qq.com",
      "homepage": "https://github.com/zhouyl"
    }
  ],
  "keywords": [
    "mellivora",
    "laravel",
    "api",
    "caster",
    "entity",
    "response",
    "transformer",
    "eloquent",
    "php8"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^8.3|^8.4",
    "brick/math": "*",
    "nesbot/carbon": "*",
    "illuminate/contracts": "^10.0|^11.0|^12.0",
    "illuminate/http": "^10.0|^11.0|^12.0",
    "illuminate/support": "^10.0|^11.0|^12.0",
    "psr/http-message": "^2.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "*",
    "guzzlehttp/psr7": "*",
    "phpunit/phpunit": "*",
    "phpstan/phpstan": "*",
    "rector/rector": "*",
    "phpstan/phpstan-strict-rules": "*",
    "phpstan/extension-installer": "*"
  },
  "autoload": {
    "psr-4": {
      "Mellivora\\Http\\Api\\": "src"
    },
    "files": [
      "polyfill-phpstorm.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Mellivora\\Http\\Api\\Tests\\": "tests"
    }
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "optimize-autoloader": true,
    "allow-plugins": {
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test-coverage": "./vendor/bin/phpunit --coverage-html ./coverage",
    "test-coverage-text": "./vendor/bin/phpunit --coverage-text",
    "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run",
    "phpcs-fix": "./vendor/bin/php-cs-fixer fix -v",
    "phpstan": "./vendor/bin/phpstan analyse",
    "rector": "./vendor/bin/rector process --dry-run",
    "rector-fix": "./vendor/bin/rector process",
    "quality": [
      "@phpcs",
      "@phpstan",
      "@test"
    ],
    "quality-full": [
      "@phpcs",
      "@phpstan",
      "@rector",
      "@test-coverage"
    ],
    "fix": [
      "@phpcs-fix",
      "@rector-fix"
    ]
  },
  "support": {
    "issues": "https://github.com/zhouyl/laravel-api-caster/issues",
    "source": "https://github.com/zhouyl/laravel-api-caster",
    "docs": "https://github.com/zhouyl/laravel-api-caster#readme"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/zhouyl"
    }
  ]
}
